# Staging Environment Configuration
# Copy this file to .env and fill in your values

# Application
FLASK_ENV=staging
FLASK_DEBUG=0
SECRET_KEY=staging-secret-key-change-in-production
JWT_SECRET_KEY=staging-jwt-secret-key-change-in-production

# Database
DATABASE_URL=postgresql://proposal_user:proposal_password@staging-db-host:5432/proposal_generator
DB_POOL_SIZE=10
DB_MAX_OVERFLOW=20

# Redis
REDIS_URL=redis://staging-redis-host:6379/0

# Logging
LOG_LEVEL=INFO
ENABLE_JSON_LOGGING=true
LOG_DIR=/var/log/proposal-generator
LOG_MAX_BYTES=10485760
LOG_BACKUP_COUNT=10

# LLM API Keys
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=your-anthropic-api-key
GOOGLE_API_KEY=your-google-api-key
GROQ_API_KEY=your-groq-api-key

# Email
SENDGRID_API_KEY=your-sendgrid-api-key
FROM_EMAIL=noreply@staging.example.com

# Monitoring
ENABLE_MONITORING=true
ALERT_SMTP_SERVER=smtp.gmail.com
ALERT_SMTP_PORT=587
ALERT_EMAIL_USERNAME=
ALERT_EMAIL_PASSWORD=
ALERT_FROM_EMAIL=
ALERT_TO_EMAILS=
ALERT_WEBHOOK_URL=

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=proposal-generator-staging
AWS_REGION=us-east-1

# Feature Flags
ENABLE_CACHING=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# Deployment
ENVIRONMENT=staging
HEALTH_CHECK_URL=https://staging.example.com/api/monitoring/health



