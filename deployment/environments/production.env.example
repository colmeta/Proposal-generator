# Production Environment Configuration
# Copy this file to .env and fill in your values
# IMPORTANT: Never commit actual production secrets to version control

# Application
FLASK_ENV=production
FLASK_DEBUG=0
SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING
JWT_SECRET_KEY=CHANGE-THIS-TO-A-SECURE-RANDOM-STRING

# Database
DATABASE_URL=postgresql://proposal_user:CHANGE-PASSWORD@production-db-host:5432/proposal_generator
DB_POOL_SIZE=20
DB_MAX_OVERFLOW=40

# Redis
REDIS_URL=redis://production-redis-host:6379/0

# Logging
LOG_LEVEL=WARNING
ENABLE_JSON_LOGGING=true
LOG_DIR=/var/log/proposal-generator
LOG_MAX_BYTES=52428800
LOG_BACKUP_COUNT=30

# LLM API Keys
OPENAI_API_KEY=your-production-openai-api-key
OPENAI_MODEL=gpt-4-turbo-preview
ANTHROPIC_API_KEY=your-production-anthropic-api-key
GOOGLE_API_KEY=your-production-google-api-key
GROQ_API_KEY=your-production-groq-api-key

# Email
SENDGRID_API_KEY=your-production-sendgrid-api-key
FROM_EMAIL=noreply@example.com

# Monitoring
ENABLE_MONITORING=true
ALERT_SMTP_SERVER=smtp.gmail.com
ALERT_SMTP_PORT=587
ALERT_EMAIL_USERNAME=
ALERT_EMAIL_PASSWORD=
ALERT_FROM_EMAIL=alerts@example.com
ALERT_TO_EMAILS=admin@example.com,ops@example.com
ALERT_WEBHOOK_URL=https://your-webhook-url.com/alerts

# AWS S3
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_S3_BUCKET=proposal-generator-production
AWS_REGION=us-east-1

# Feature Flags
ENABLE_CACHING=true
ENABLE_ANALYTICS=true
ENABLE_ERROR_TRACKING=true

# Security
ALLOWED_HOSTS=example.com,www.example.com
CORS_ORIGINS=https://example.com,https://www.example.com

# Deployment
ENVIRONMENT=production
HEALTH_CHECK_URL=https://example.com/api/monitoring/health
BACKUP_BEFORE_DEPLOY=true
RUN_MIGRATIONS=true

